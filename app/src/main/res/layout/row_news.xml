<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/small_padding">

    <ImageView
        android:id="@+id/row_news_image"
        android:layout_width="@dimen/row_news_image_height"
        android:layout_height="@dimen/row_news_image_height"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/row_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/row_news_image"
        android:layout_toRightOf="@+id/row_news_image"
        android:padding="@dimen/small_padding"
        android:text="Название новости"/>

    <TextView
        android:id="@+id/row_news_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/row_news_title"
        android:layout_alignStart="@+id/row_news_title"
        android:layout_below="@+id/row_news_title"
        android:padding="@dimen/small_padding"
        android:text="news.ru"/>

    <TextView
        android:id="@+id/row_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/row_news_title"
        android:layout_alignStart="@+id/row_news_title"
        android:layout_below="@+id/row_news_from"
        android:padding="@dimen/small_padding"
        />


    <TextView
        android:id="@+id/row_news_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_news_date"
        android:padding="@dimen/small_padding"
        android:visibility="gone"
        />
</RelativeLayout>